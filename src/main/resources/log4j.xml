<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true" xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="append" value="true"/>
        <param name="file" value="${catalina.home}/logs/teachers.log"/>
        <param name="datePattern" value="'-'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="services" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="append" value="true"/>
        <param name="file" value="${catalina.home}/logs/teacher-services.log"/>
        <param name="datePattern" value="'-'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <logger name="org.springframework">
        <level value="INFO"/>
        <appender-ref ref="file"/>
    </logger>

    <logger name="org.springframework.web.servlet.mvc">
        <level value="WARN"/>
        <appender-ref ref="file"/>
    </logger>

    <logger name="org.springframework.security.web">
        <level value="WARN"/>
        <appender-ref ref="file"/>
    </logger>

    <logger name="org.hibernate">
        <level value="WARN"/>
        <appender-ref ref="file"/>
    </logger>

    <logger name="services">
        <level value="INFO"/>
        <appender-ref ref="services"/>
    </logger>

    <root>
        <level value="DEBUG" />
        <appender-ref ref="file" />
    </root>

</log4j:configuration>